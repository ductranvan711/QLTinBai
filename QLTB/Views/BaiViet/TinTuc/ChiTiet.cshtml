@section Styles {
    <link href="~/assets/css/ChiTiet_TinTuc.css" rel="stylesheet" asp-append-version="true" />
}

<div class="wrapper-page wrapper-page-content bg-lightblue pb-0">
    <div class="container">
        <div class="row">
            <div class="breadcrumb-wrapper col-md-12">
                <ul class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Trang chủ</a></li>
                    <li class="breadcrumb-item active">@ViewBag.Title</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container container-main-content">
        <div class="row">
            <input type="checkbox" class="openSidebarMenu" id="openSidebarMenu">
            <label for="openSidebarMenu" class="sidebarIconToggle">
                <div class="spinner diagonal part-1"></div>
                <div class="spinner horizontal"></div>
                <div class="spinner diagonal part-2"></div>
            </label>
            <div class="col-lg-8">
                @* <a title="Sidebar right" class="btn-sidebar" role="button"><i class="icon-fluent icon_fluent_text_continuous_filled"></i></a> *@
                <!--main content -->
                <div id="section-main-detail-content" class="news-detail-content mb-2">
                    <div id="news-category" class="news-category"></div>
                    <h1 id="news-title" class="news-title"></h1>
                    <div class="news-meta">
                        <div id="news-date-container">
                            <span id="news-date" class="news-time"></span>
                        </div>
                        <div id="news-author-container" style="display:none">
                            <span id="news-author" class="news-author"></span>
                        </div>
                        <div id="news-source-container" style="display:none">
                            <span id="news-source" class="news-source"></span>
                        </div>
                    </div>
                    <div id="news-summary" class="news-summary"></div>
                    <div id="news-content" class="news-content"></div>
                </div>
                <div class="slideTinBaiKhac news_list_others">
                    <div id="section-bottom">
                        <!--section bottom-->
                    </div>
                </div> 
            </div>
            <div id="GridLeft" class="col-lg-4">
                <div class="col-md-12">
                    <div id="section-sidebar-1">
                        <!--section sidebar 1-->
                    </div>
                </div>
                <div class="col-md-12">
                    <div id="section-sidebar-2">
                        <!--section sidebar 2-->
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        const baiVietID = '@ViewBag.BaiVietID';
    </script>
    <script src="~/PageScripts/app/ChiTiet_TinTuc.js" asp-append-version="true"></script>

}
